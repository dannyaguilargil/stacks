version: "3.7"

services:
  superset:
    image: apache/superset:latest
    container_name: superset_app
    ports:
      - "8088:8088"   # Cambia a "80:8088" si quieres usar el puerto 80
    environment:
      - SUPERSET_SECRET_KEY=supersecretkey
      - SUPERSET_ENV=production
      - SUPERSET_LOAD_EXAMPLES=no
      - REDIS_HOST=redis
      # SQLite en la ruta interna de Superset
      - SQLALCHEMY_DATABASE_URI=sqlite:////app/superset_home/superset.db
    volumes:
      - superset_home:/app/superset_home
    depends_on:
      - redis
    command: >
      /bin/sh -c "
      superset db upgrade &&
      superset init &&
      superset run -h 0.0.0.0 -p 8088"
    restart: always

  redis:
    image: redis:7
    container_name: superset_redis
    restart: always

volumes:
  superset_home:


#####ejecutar este comando en consola para creacion del usuario superset fab create-admin 
